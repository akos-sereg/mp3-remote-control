<!DOCTYPE web-app PUBLIC
  '-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN'
  'http://java.sun.com/dtd/web-app_2_3.dtd'>
<web-app>
	<display-name>MP3 Control Service</display-name>
    <description>MP3 CtrSrvc</description>

  <servlet>
    <servlet-name>mp3player</servlet-name>
    <servlet-class>hu.akoss.git.mp3remotecontrol.server.servlets.Mp3Player</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>mp3browser</servlet-name>
    <servlet-class>hu.akoss.git.mp3remotecontrol.server.servlets.Mp3Browser</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>mp3volumecontrol</servlet-name>
    <servlet-class>hu.akoss.git.mp3remotecontrol.server.servlets.Mp3VolumeControl</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>mp3player</servlet-name>
    <url-pattern>/mp3player</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>mp3browser</servlet-name>
    <url-pattern>/mp3browser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>mp3volumecontrol</servlet-name>
    <url-pattern>/mp3volumecontrol</url-pattern>
  </servlet-mapping>
</web-app>